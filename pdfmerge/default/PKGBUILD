# All my PKGBUILDs are managed at https://github.com/Martchus/PKGBUILDs where
# you also find the URL of a binary repository.

pkgname=pdfmerge
pkgver=1.0.0
pkgrel=2
pkgdesc="Wrapper script for Ghostscript to merge multiple docs/images in one PDF files conveniently."
url="https://github.com/Martchus/PKGBUILDs/tree/master/${pkgname}"
arch=('any')
license=('GPL')
groups=()
provides=()
depends=('ghostscript')
makedepends=()
conflicts=()
replaces=()
backup=()
install=
source=('pdfmerge.sh')
noextract=()
sha256sums=('59de8adb5bd19c7762c3e3a248a1dbee08376589bb5e9672f761055be1ea7b7e')

package() {
  install -Dm755 "${srcdir}/pdfmerge.sh" "${pkgdir}/usr/bin/pdfmerge"
}
